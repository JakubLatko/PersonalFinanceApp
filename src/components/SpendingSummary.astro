---
import transformMoney from "@lib/transformMoney";

interface Props {
	label: string;
	spent: number;
	maximum: number;
	theme: string;
}

const { label, spent, maximum, theme } = Astro.props;
---

<div>
	<span class="bar" style={`background:${theme}`}></span>
	<h3 class="label">{label}</h3>
	<h2 class="spent">${spent.toFixed(2)}</h2>
	<p>of</p>
	<h3 class="maximum">${maximum.toFixed(2)}</h3>
</div>

<style lang="scss">
	div {
		display: flex;
		// padding-inline: 0.5rem;
		padding-block: 0.5rem;
		align-items: center;
	}
	.bar {
		height: 2rem;
		width: 8px;
		border-radius: 0.5rem;
	}
	h3,
	h2 {
		color: var(--primary-100);
	}
	h2 {
		font-size: var(--fs-body);
		margin-left: auto;
		margin-right: 0.25rem;
	}

	h3,
	p {
		font-size: var(--fs-body-sm);
		margin-left: 0.25rem;
		font-weight: var(--fw-regular);
	}
</style>
