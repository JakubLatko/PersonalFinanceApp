			padding-block: 2rem;	
		}
		.potsWrapper{
			display: flex;
			gap: 2rem;
		}
		.sectionTitle{
			margin-bottom: 2rem;
		}
		.potTotalSaved{
			width: calc(40% - 1rem);
		}
		.pots{
			width: calc(60% - 1rem);
		}
		.budgetsContent{
			display: flex;
		}
		.budgets{
			display: flex;
			flex-direction: column;
			width: 20%;
			margin-left: auto;
			gap: 1.5rem;
		}
		.donutWrapper{
			flex-grow: 1;
			max-width: 400px;
			margin-inline: auto;
		}
		.budget{
			width: 100%;
		}
	}
	@media only screen and (min-width: 1366px) {
		main{
			display: grid;
			grid-template-columns: repeat(12, 1fr);
			grid-template-rows: repeat(8, auto);
			margin-bottom: 0;
		}
		h1{
			grid-column: 1 / span 12;
			grid-row: 1;
			margin-block: 1rem;
		}
		section{
			height: fit-content;
		}
		.accountBalance{
			grid-column: 1 / span 12;
			grid-row: 2 / span 2;
		}
		.potsSection{
			grid-column: 1 / span 7;
			grid-row: 4 / span 2;
		}
		.budgetsSection{
			grid-column: 8 / span 5;
			grid-row: 4 / span 3;
		}
		.transactionsSection{
			grid-column: 1 / span 7;
			grid-row: 6 / span 5;
			
		}
		.recurringBillsSection{
			grid-column: 8 / span 5;
			grid-row: 7 / span 2;
		}
	}

</style>
